<Window x:Class="DbAuthApp.Registration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbAuthApp.Registration"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="200" MinWidth="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <GroupBox x:Name="UsernameGb" Header="Username">
            <TextBox x:Name="LoginBox" TextWrapping="Wrap" ToolTip="" Width="149.8" Margin="4,0,4,0" HorizontalAlignment="Left"/>
        </GroupBox>
        <GroupBox x:Name="PasswordGb" Header="Password">
            <PasswordBox x:Name="PasswordBox" ToolTip="" Margin="4,0,4.2,0" Width="149.8"/>
        </GroupBox>
        <Button x:Name="SignUpButton" Content="Sign Up" HorizontalAlignment="Center" Click="SignUpButton_Click" Margin="8,8,8,7"/>
    </StackPanel>
</Window>
